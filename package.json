{
	"name": "@nuka/state",
	"version": "0.1.0",
	"description": "Atom-based state management solution.",
	"main": "dist/index.js",
	"scripts": {
		"test": "jest",
		"compile": "tsc",
		"docs": "typedoc --out docs src/index.ts",
		"run-pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bbuck/nuka-state.git"
	},
	"keywords": [
		"nuka",
		"state",
		"redux",
		"recoil",
		"atom",
		"product",
		"projector",
		"reactor",
		"computer"
	],
	"author": "Brandon Buck <lordizuriel@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/bbuck/nuka-state/issues"
	},
	"homepage": "https://github.com/bbuck/nuka-state#readme",
	"devDependencies": {
		"@types/jest": "^26.0.22",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.5",
		"typedoc": "^0.20.36",
		"typescript": "^4.2.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-pre-commit"
		}
	},
	"lint-staged": {
		"src/**/*.ts": [
			"[[ 0 -eq 1 ]]",
			"eslint --fix",
			"tsc -p tsconfig.json --noEmit",
			"git add"
		]
	}
}
